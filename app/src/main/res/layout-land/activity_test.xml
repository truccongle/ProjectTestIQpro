<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/firewatch_home"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:text="10/35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/txtCauHoiSo" />

        <TextView
            android:text="12:30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtCauHoiSo"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:id="@+id/txtTime" />
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_cu"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/nen_bang"
        android:layout_height="25dp"
        android:id="@+id/textView2"
        android:text="Ứng dụng kiểm tra IQ" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/nen_bang"
        android:layout_height="match_parent">

        <Button
            android:text="A"
            android:id="@+id/btnA"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/txtCauHoi"
            android:layout_alignStart="@+id/txtCauHoi"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="5"
            android:id="@+id/txtA"
            android:gravity="fill"
            android:layout_height="40dp"
            android:layout_width="200dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/txtCauHoi"
            android:layout_toRightOf="@+id/btnA"
            android:layout_toEndOf="@+id/btnA" />

        <Button
            android:text="B"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:id="@+id/btnB"
            android:layout_below="@+id/txtCauHoi"
            android:layout_toRightOf="@+id/txtA"
            android:layout_toEndOf="@+id/txtA" />

        <TextView
            android:text="7"
            android:layout_width="200dp"
            android:gravity="fill"
            android:layout_height="40dp"
            android:id="@+id/txtB"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/txtCauHoi"
            android:layout_toRightOf="@+id/btnB"
            android:layout_toEndOf="@+id/btnB" />

        <Button
            android:text="C"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnC"
            android:layout_below="@+id/txtA"
            android:layout_alignLeft="@+id/btnA"
            android:layout_alignStart="@+id/btnA"
            android:layout_marginTop="24dp" />

        <TextView
            android:text="4"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="fill"
            android:id="@+id/txtC"
            android:layout_alignTop="@+id/btnC"
            android:layout_alignLeft="@+id/txtA"
            android:layout_alignStart="@+id/txtA" />

        <Button
            android:text="D"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnD"
            android:layout_alignBaseline="@+id/btnC"
            android:layout_alignBottom="@+id/btnC"
            android:layout_alignLeft="@+id/btnB"
            android:layout_alignStart="@+id/btnB" />

        <TextView
            android:text="7654"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/txtD"
            android:gravity="fill"
            android:layout_alignTop="@+id/btnC"
            android:layout_alignLeft="@+id/txtB"
            android:layout_alignStart="@+id/txtB" />

        <TextView
            android:text="Dãy số tiếp theo là: 1 3 5 7 ..."
            android:layout_width="match_parent"
            android:id="@+id/txtCauHoi"
            android:layout_height="100dp"
            android:layout_above="@+id/btnA"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

    </RelativeLayout>

</LinearLayout>