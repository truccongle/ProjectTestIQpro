<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#6bdcbc"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detective"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tuá»•i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAge"
        android:textColor="#ff0000"
        android:layout_marginLeft="86dp"
        android:layout_marginStart="86dp"
        android:layout_alignBottom="@+id/imgNC"
        android:layout_toRightOf="@+id/txtName"
        android:layout_toEndOf="@+id/txtName" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ce1d1d"
        android:textSize="25dp"
        android:typeface="serif"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_alignBaseline="@+id/txtAge"
        android:layout_alignBottom="@+id/txtAge"
        android:layout_toRightOf="@+id/imgNC"
        android:layout_toEndOf="@+id/imgNC" />

    <TextView
        android:text="Your IQ IS...."
        android:layout_width="wrap_content"
        android:textColor="#ff0000"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgNC"
        android:layout_toEndOf="@+id/imgNC"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/txtIQ" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDate"
        android:textColor="#ff0000"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/txtAge"
        android:layout_alignEnd="@+id/txtAge"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

</RelativeLayout>
